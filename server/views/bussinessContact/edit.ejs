<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!-- Content for the Edit Page -->
<div class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1 class="text-center pt-5 pb-3"><%= title %></h1>

            <form class="form" method="post">

                <div class="form-group mb-3 row addFontStyle">
                    <label for="nameTextField" class="col-sm-3 col-form-label col-form-label-lg">Bussiness Contact Name</label>
                    <div class="col-sm-9">
                    <input type="text" class="form-control form-control-lg"
                    id="nameTextField"
                    placeholder="Enter Contact Name"
                    name="contactName" 
                    value="<%= UpdateContact.contactName %>"
                    required>
                    </div>
                </div>

                <div class="form-group mb-3 row addFontStyle">
                    <label for="numberTextField" class="col-sm-3 col-form-label col-form-label-lg">Bussiness Contact Number</label>
                    <div class="col-sm-9">
                    <input type="text" class="form-control form-control-lg"
                    id="numberTextField"
                    placeholder="Enter Contact Number"
                    name="contactNumber" 
                    value="<%= UpdateContact.contactNumber %>"
                    required>
                    </div>
                </div>

                <div class="form-group mb-3 row addFontStyle">
                    <label for="emailTextField" class="col-sm-3 col-form-label col-form-label-lg">Bussiness Email</label>
                    <div class="col-sm-9">
                    <input type="text" class="form-control form-control-lg"
                    id="emailTextField"
                    placeholder="Enter Email Address"
                    name="email" 
                    value="<%= UpdateContact.email %>"
                    required>
                    </div>
                </div>

                <div class="text-center">
                    <button class="btn btn-primary btn-lg pl-5" type="submit">
                        <i class="fas fa-edit"> Submit</i>
                    </button>
        
                    <a href="/bussiness-contact" class="btn btn-warning btn-lg pr-5">
                        <i class="fas fa-undo"> Cancel</i>
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  
<%- include ../partials/footer.ejs %>